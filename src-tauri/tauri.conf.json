{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "http://localhost:3000",
    "distDir": "../build"
  },
  "package": {
    "productName": "AHQ Store",
    "version": "../package.json"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "notification": {
        "all": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "createDir": true,
        "scope": ["$APP", "$APP/*", "C:\\ProgramData\\AHQ Store Applications\\Updaters\\*", "C:\\ProgramData\\AHQ Store Applications\\Updaters"]
      },
      "window": {
        "all": false,
        "maximize": true,
        "minimize": false,
        "setSkipTaskbar": false,
        "setTitle": true,
        "show": true,
        "startDragging": false,
        "unmaximize": false,
        "unminimize": false,
        "create": true,
        "close": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Business",
      "copyright": "AHQ Softwares",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.ahqsoftwares.store",
      "longDescription": "AHQ Store\nA New Store for downloading apps!",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "A store to download apps",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "allowDowngrades": false,
	"wix": {
	    "template": "assets/install.wix"
	}
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://ahq-store.cf/api/updater"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFBQUQxRTExODc4NUUyQUMKUldTczRvV0hFUjZ0cWlOczRIQjlVTDFiWUhRUlNsMERZTm9hdGJzVTc1UUtEajBPSnVydWVMc0YK",
      "dialog": false
    },
    "windows": [
      {
        "center": true,
        "height": 753,
        "resizable": true,
        "title": "AHQ Store",
        "width": 1239,
        "minHeight": 700,
        "minWidth": 1200
      }
    ]
  }
}
